{
  "ignorePatterns": ["/cypress/", "/node_modules/"],
  "extends": ["react-app"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "eqeqeq": ["error", "always"],
    "no-console": "error",
    "no-unused-vars": "error",
    "comma-dangle": ["error", {
      "arrays": "never",
      "objects": "never",
      "imports": "never",
      "exports": "never",
      "functions": "never"
    }],
    "comma-style": ["error", "last"],
    "no-duplicate-imports": "error",
    "no-undefined": "error",
    "key-spacing": ["error", {
      "beforeColon": false,
      "afterColon": true,
      "mode": "strict",
      "align": "value"
    }],
    "arrow-spacing": ["error", {
      "before": true,
      "after": true
    }],
    "brace-style": ["error", "1tbs", {"allowSingleLine": true}],
    "no-trailing-spaces": ["error", {"skipBlankLines": false, "ignoreComments": false}],
    "eol-last": ["error", "always"],
    "max-len": ["warn", {"code": 80, "tabWidth": 2, "ignoreTemplateLiterals": true, "ignoreRegExpLiterals": true, "ignoreComments": true, "ignoreTrailingComments": true, "ignoreUrls": true, "ignoreStrings": true}],
    "react/jsx-closing-bracket-location": [1, "line-aligned"],
    "space-in-parens": ["error", "never"],
    "object-curly-spacing": ["error", "always"]
  }
}